<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">


        <Button
            android:id="@+id/BtSendCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="113dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="425dp"
            android:text="Запустить класс"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RBBClassC" />

        <EditText
            android:id="@+id/a"
            android:layout_width="99dp"
            android:layout_height="50dp"
            android:layout_marginStart="146dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="164dp"
            android:ems="10"
            android:inputType="text"
            android:text="Класс А"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/result"
            android:layout_width="327dp"
            android:layout_height="270dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="129dp"
            android:inputType="textMultiLine"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BtSendCA" />

        <RadioGroup
            android:layout_width="283dp"
            android:layout_height="94dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/BtSendCA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a">

            <RadioButton
                android:id="@+id/RBClassB"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:text="Класс B"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/RBBClassC"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Класс C"
                android:textSize="20sp" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>